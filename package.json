{
  "name": "art-map-generator",
  "version": "1.0.0",
  "description": "A solution to generate MapArt for Minecraft",
  "repository": "https://github.com/MLyousfi/Art-Map-Generator.git",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "gh-publisher": "electron-builder -p always",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "Half-Shield",
  "license": "ISC",
  "dependencies": {
    "electron-log": "^4.4.1",
    "jquery": "^3.6.0",
    "mineflayer": "^3.11.2",
    "mineflayer-pathfinder": "^1.8.0",
    "mineflayer-web-inventory": "^1.6.3",
    "uaup-js": "^0.0.22",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "electron": "^12.0.0",
    "electron-builder": "^22.13.1"
    
  },
  "build": {
    "productName": "ArtMap Generator",
    "target": "NSIS",
    "directories": {
      "output": "../realse"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
