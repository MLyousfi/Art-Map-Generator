{
  "name": "art-map-generator",
  "version": "1.0.1",
  "description": "A solution to generate MapArt for Minecraft",
  "repository": "https://github.com/MLyousfi/Art-Map-Generator.git",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "gh-publisher": "electron-builder -p always"
  },
  "author": "Half-Shield",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.6.0",
    "mineflayer": "^3.11.2",
    "mineflayer-pathfinder": "^1.8.0",
    "mineflayer-web-inventory": "^1.6.3",
    "uaup-js": "^0.0.22"
  },
  "devDependencies": {
    "electron": "^12.0.0",
    "electron-builder": "^22.13.1",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "appId": "com.halfshield.artmapgenerator",
    "productName": "ArtMap Generator",
    "target": "NSIS",
    "directories": {
      "output": "../realse"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": { 
      "publish": [
        {
          "provider": "github",
          "owner": "MLyousfi",
          "repo": "Art-Map-Generator",
          "token": "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"
        }
      ] 
    }
    
  }
}
